<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :day_start %><br />
    <%= f.date_select :day_start %>
  </div>
  <div class="field">
    <%= f.label :day_end %><br />
    <%= f.date_select :day_end %>
  </div>
  <div class="field">
    <%= f.label :occurrences, "Is your bazaar during more than one day? Or is a recurring bazaar?" %><br />
    <%= f.select_recurring :recurring_rules %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
